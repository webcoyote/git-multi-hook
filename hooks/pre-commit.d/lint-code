#!/usr/bin/env bash
# Run "scripts/lint" in the project repository if it exists
set -Eeuo pipefail
trap 'echo "${BASH_SOURCE[0]}: line $LINENO: $BASH_COMMAND: exitcode $?"' ERR
# shellcheck source-path=SCRIPTDIR
source "$(dirname "${BASH_SOURCE[0]}")/../__common"

if ! command -v "scripts/lint" &>/dev/null ; then
    debug "scripts/lint not found; skipping lint"
    exit 0
fi

get_arguments_or_staged_files ".*" "$@"
if [[ ${#FILES[@]} -ne 0 ]]; then
    exec "scripts/lint" "${FILES[@]}"
fi
